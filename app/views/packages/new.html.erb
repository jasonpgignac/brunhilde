<h1>New package</h1>

<%= form_for(@package) do |f| %>
  <%= f.error_messages %>

		<table>
			<tr>
				<td>Name</td>
				<td><%= f.text_field(:name)%></td>
			</tr>
			<tr>
				<td>Platform</td>
				<td>
					<table>
					<% PLATFORMS.each do |platform| %>
						<tr>
							<td><%= f.radio_button(:platform, platform)%></td>
							<td><%= f.label(:platform, platform) %></td>
						</tr>
					<% end %>
					</table>
				</td>
			<tr>
				<td>Licensed</td>
				<td><%= f.check_box(:licensed)%></td>
			</tr>
			<tr>
				<td>Stage</td>
				<td>
					<table>
						<tr>
							<td><%= f.radio_button(:deployment_stage, 0)%></td>
							<td><%= f.label(:deployment_stage, "Prescript") %></td>
						</tr>
						<tr>
							<td><%= f.radio_button(:deployment_stage, 1)%></td> 
							<td><%= f.label(:deployment_stage, "Postscript") %></td>
						<tr>
					</table>
				</td>
			</tr>
			
			<tr>
				<td>Path</td>
				<td><%= f.text_field(:source_path)%></td>
			</tr>
			<tr>
				<td>Executable</td>
				<td><%= f.text_field(:executable)%></td>
			</tr>
		</table>
    <%= f.submit "Create" %>
<% end %>

<%= link_to 'Back', packages_path %>
