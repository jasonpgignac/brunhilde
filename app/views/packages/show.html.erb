<p>
	ID: <%=@package.id%><br />
	Name: <%=@package.name%><br />
	Licensed: <%= @package.licensed%><br />
	Source Path: <%= @package.source_path %><br />
	Executable: <%= @package.executable %><br />
	Deployment Stage: <%= @package.deployment_stage %><br />
</p>
<p>
	<div>
		Tests:
		<table>
			<tr>
				<th>Name</th>
				<th>Description</th>
			</tr>
			<% @package.package_tests.each do |pt|%>
				<tr class="<%= cycle("even", "odd") %>">
					<td><%= pt.name %></td>
					<td><%= pt.description %></td>
					<td><%= link_to 'Show', package_test_path(@package, pt) %></td>
					<td><%= link_to 'Edit', edit_package_test_path(@package, pt) %></td>
		    		<td><%= link_to 'Destroy', package_test_path(@package, pt), :confirm => 'Are you sure?', :method => :delete %></td>
				</tr>
			<% end %>
		</table>
		<%= link_to 'New Test...', new_package_test_path(@package.id)%>
	</div>
</p>
<%= link_to 'Edit', edit_package_path(@package) %> |
<%= link_to 'Back', packages_path %>
