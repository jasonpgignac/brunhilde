<h1>Listing package test reactions</h1>

<table>
  	<tr>
		<td>Command</td>
		<td>Parameter</td>
		<td>Repetitions</td>
  	</tr>

	<% for ptr in @packages %>
  		<tr>
			<td><%= ptr.command %></td>
			<td><%= ptr.parameter %></td>
			<td><%= ptr.repetitions %></td>
    		<td><%= link_to 'Edit', edit_package_test_reaction_path(@package.id, @package_test.id, ptr.id) %></td>
    		<td><%= link_to 'Destroy', package_test_reaction_path(@package, @package_test, ptr), :confirm => 'Are you sure?', :method => :delete %></td>
  		</tr>
	<% end %>
</table>

<br />

